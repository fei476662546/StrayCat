<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.UserMapper">
    <select id="login" resultType="com.entity.User">
        select * from users where username=#{username} and password=#{password}
    </select>
<select id="getUserById" resultType="com.entity.User">
    select *  from users where id=#{id}
</select>
    <!-- List<User>getUsers(); -->
    <select id="getUsers" resultType="com.entity.User">
 select * from users
 </select>
    <!-- int deleteUserById(Integer id) -->
    <delete id="deleteUserById" parameterType="int">
 delete  from users where id=#{id}
 </delete>
    <!-- int updateUser(User user) -->
    <update id="updateUser" parameterType="com.entity.User" >
 update users set username=#{username},password=#{password},relName=#{relName},age=#{age},sex=#{sex},tel=#{tel},email=#{email},address=#{address},message=#{message},state=#{state} where id=#{id}
 </update>
    <update id="updatePic" >
        update users set pic=#{pic} where id=#{id}
    </update>
    <update id="updateRemark" >
        update users set remark=#{remark} where id=#{id}
    </update>
    <insert id="saveUser" parameterType="com.entity.User">
        insert into users(username,password,age,sex,tel,email,address,relName,state,message,pic,remark) values(#{username},#{password},#{age},#{sex},#{tel},#{email},#{address},#{relName},#{state},#{message},#{remark},#{pic})
    </insert>
    <delete id="deleteBatch">
      delete from users
      <foreach collection="ids" item="id" separator="," open="where id in (" close=")">
        #{id}
    </foreach>
     </delete>
</mapper>
